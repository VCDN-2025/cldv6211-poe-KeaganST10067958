@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

@if (TempData["VenueDeleteError"] != null)
{
    <div class="alert alert-danger">
        @TempData["VenueDeleteError"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Venue Image" width="100" height="60" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VenueId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VenueId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
