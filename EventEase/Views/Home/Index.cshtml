@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mb-4">🎉 Welcome to EventEase Admin Portal</h1>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card shadow text-center p-4">
            <h4>Manage Venues</h4>
            <p>View, edit, and add new event venues.</p>
            <a href="/Venues" class="btn btn-primary">Go to Venues</a>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow text-center p-4">
            <h4>Manage Events</h4>
            <p>Keep track of upcoming and past events.</p>
            <a href="/Events" class="btn btn-primary">Go to Events</a>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow text-center p-4">
            <h4>Manage Bookings</h4>
            <p>Assign events to venues and manage bookings.</p>
            <a href="/Bookings" class="btn btn-primary">Go to Bookings</a>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card shadow text-center p-4">
            <h4>Booking Summary</h4>
            <p>Download and view all event bookings in one place.</p>
            <a href="/Bookings/Summary" class="btn btn-primary">Go to Summary</a>
        </div>
    </div>
</div>

<div class="alert alert-secondary text-center mt-4">
    Need help? Contact your IT support or check the admin guide.
</div>
